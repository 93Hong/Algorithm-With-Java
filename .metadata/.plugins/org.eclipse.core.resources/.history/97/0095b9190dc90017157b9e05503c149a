package ModelImplement;

import ModelInterface.IKnight;

public class Knight implements IKnight {
	private int y, x;
	private int movingLocation[][] = { { 2, 1 }, { -2, 1 }, { 2, -1 }, { -2, -1 }, { 1, 2 }, { -1, 2 }, { 1, -2 }, { -1, -2 } };

	public Knight(int y, int x) {
		this.y = y;
		this.x = x;
	}

	@Override
	public void move(int dir, int dist) {
		// TODO Auto-generated method stub
		y = y + dist * movingLocation[dir][0];
		x = x + dist * movingLocation[dir][1];
	}

	public int getY() {
		return y;
	}
	public int getX() {
		return x;
	}
}
